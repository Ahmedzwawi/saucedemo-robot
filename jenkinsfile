pipeline {
    agent {
        docker {
            image 'python:3.9-slim'
            args '--network=host'  // Permet d'accéder à Selenium Grid
        }
    }

    environment {
        SELENIUM_GRID_URL = "http://192.168.1.55:4444/wd/hub"
    }

    stages {
        stage('Setup Virtual Environment') {
            steps {
                script {
                    sh 'python -m venv .venv'
                    sh 'source .venv/bin/activate'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh '.venv/bin/python -m pip install --upgrade pip'
                    sh '.venv/bin/pip install -r requirements.txt || pip install --user -r requirements.txt'
                    sh '.venv/bin/pip freeze'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh 'echo "SELENIUM_GRID_URL: $SELENIUM_GRID_URL"'
                    sh '.venv/bin/python -m pip install robotframework' // Assure que Robot Framework est installé
                    sh '.venv/bin/python -m robot tests/login_templatecopy.robot'
                }
            }
        }
    }
}
