pipeline {
    agent {
        docker {
            image 'python:3.9-slim' // Correction de l'image Docker
        }
    }

    environment {
        SELENIUM_GRID_URL = "http://192.168.1.55:4444/wd/hub"
    }

    stages {
               stage('Install Dependencies') {
            steps {
                sh '''
                    apt-get update && apt-get install -y unzip curl
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh '''
                        python -m robot --variable SELENIUM_GRID_URL:${SELENIUM_GRID_URL} tests/login_templatecopy.robot
                    '''
                }
            }
        }
    }
}
